<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yamplatform.spscp.mapper.CategorysMapper">
	<!-- 查询一个栏目 -->
	<select id="SelectOne" parameterType="Integer" resultType="yamplatform.spscp.pojo.Categorys">
    select * from t_category where id = #{id}
  </select>
	<!-- 插入栏目 -->
	<insert id="InsertCategorys" parameterType="yamplatform.spscp.pojo.Categorys">
		insert into t_category(name,countTopics,countComments) values(#{categorys.name,jdbcType=VARCHAR},#{categorys.countTopics,jdbcType=INTEGER},#{categorys.countComments,jdbcType=INTEGER})
	</insert>
	<!-- 更新栏目 -->
	<update id="UpdateCategorys">
	  update t_category set name=#{categorys.name} , countTopics = #{categorys.countTopics}  , countComments = #{categorys.countComments}where id=#{categorys.id}
	</update>
	<!-- 查询所有栏目 -->
	<resultMap type="yamplatform.spscp.pojo.Categorys" id="SelectAll">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="countTopics" column="countTopics"/>
		<result property="countComments" column="countComments"/>
	</resultMap>
	<select id="CategorysList" resultMap="SelectAll">
    	select * from t_category
  	</select>
</mapper>